{
    "compilerOptions": {
        "target": "es2016",
        "lib": ["ES6"],
        "module": "es6",
        "rootDir": "src",
        "allowJs": true,
        "outDir": "dist",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "noImplicitAny": true,
        "skipLibCheck": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist/**/*", "test", "**/*.test.ts"]
}
